#!/usr/bin/env sh

# Pre-commit hook to automatically fix issues for BOTH frontend and backend
echo "ğŸ” Running pre-commit checks (matching CI pipeline)..."

# Check if we have staged frontend files
FRONTEND_FILES=$(git diff --staged --name-only | grep -E '^frontend/.*\.(ts|tsx|js|jsx)$' || true)
# Check if we have staged backend files
BACKEND_FILES=$(git diff --staged --name-only | grep -E '^backend/.*\.py$' || true)

# Frontend auto-fixes
if [ -n "$FRONTEND_FILES" ]; then
  echo "ğŸ”§ Auto-fixing Frontend (TypeScript/JavaScript) files..."
  cd frontend
  npx lint-staged
  cd ..
  git add -u
  echo "âœ… Frontend auto-fixes completed!"
fi

# Backend auto-fixes
if [ -n "$BACKEND_FILES" ]; then
  echo "ğŸ Auto-fixing Backend (Python) files..."
  cd backend

  # Auto-fix Python files using the same tools as CI
  echo "  ğŸ“¦ Running Black formatter..."
  black .

  # Check for issues (but don't fail - let CI handle complex issues)
  echo "  ğŸ” Running Flake8 check..."
  flake8 . || echo "  âš ï¸  Flake8 issues found - will be caught in CI"

  cd ..
  git add -u
  echo "âœ… Backend auto-fixes completed!"
fi

if [ -z "$FRONTEND_FILES" ] && [ -z "$BACKEND_FILES" ]; then
  echo "â„¹ï¸  No frontend or backend files staged for commit"
fi

echo "ğŸ‰ Pre-commit hook completed - files auto-fixed with CI-matching rules!"