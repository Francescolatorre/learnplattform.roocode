[flake8]
max-line-length = 88
extend-ignore = E203,W503
per-file-ignores =
    # Migrations are auto-generated
    */migrations/*.py:E501,E203,W503
    # Test files can have longer lines
    */tests/*.py:E501
    # Settings files
    settings.py:E501
exclude = 
    .git,
    __pycache__,
    .venv,
    migrations,
    .pytest_cache,
    build,
    dist,
    *views_temp.py