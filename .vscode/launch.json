{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "UAT: Backend Server",
            "type": "debugpy",
            "request": "launch",
            "module": "manage",
            "args": [
                "runserver",
                "8000"
            ],
            "django": true,
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "backend.settings"
            },
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "UAT: Frontend Dev Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "UAT: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "backend/learning/tests/user_acceptance/test_user_acceptance.py",
                "-v"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "backend.settings"
            },
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Debug: Specific Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "backend.settings"
            },
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Debug: Authentication API Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "backend/users/tests/test_authentication_api.py",
                "-v"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "backend.settings"
            },
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Django: Management Command",
            "type": "debugpy",
            "request": "launch",
            "module": "manage",
            "args": [
                "shell"
            ],
            "django": true,
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "backend.settings"
            },
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Debug Playwright Tests",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/playwright",
            "runtimeArgs": [
                "test",
                "--debug",
                "--timeout",
                "0"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "name": "Debug Current Playwright Test File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/playwright",
            "runtimeArgs": [
                "test",
                "${relativeFile}",
                "--debug",
                "--timeout",
                "0"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "name": "Debug Playwright Test",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/playwright",
            "runtimeArgs": [
                "test",
                "${relativeFile}",
                "--debug",
                "--timeout",
                "0"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/frontend",
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ]
        },
        {
            "name": "Playwright: Debug All Tests",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/playwright",
            "runtimeArgs": [
                "test",
                "--debug",
                "--timeout",
                "0"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/frontend",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ]
        },
        {
            "name": "Playwright: Debug Current File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/frontend/node_modules/.bin/playwright",
            "runtimeArgs": [
                "test",
                "${relativeFile}",
                "--debug",
                "--timeout",
                "0"
            ],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/frontend",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ]
        }
        // Note: To run multiple configurations, open multiple VSCode windows
        // and start each configuration separately
    ]
}
